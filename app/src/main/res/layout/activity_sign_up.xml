<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Card principal -->
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/login_box"
            android:gravity="center"
            android:elevation="4dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_title"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="maven_pro"
                android:textSize="22sp"
                android:layout_marginBottom="4dp" />

            <!-- Subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_subtitle"
                android:textColor="#D1D5DB"
                android:fontFamily="maven_pro"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Nome completo -->
            <EditText
                android:id="@+id/inputFullName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/name_hint"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:paddingHorizontal="12dp"
                android:fontFamily="maven_pro"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/email_hint"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:paddingHorizontal="12dp"
                android:fontFamily="maven_pro"
                android:layout_marginBottom="12dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:paddingHorizontal="12dp"
                android:fontFamily="maven_pro"
                android:layout_marginBottom="12dp" />

            <!-- Linha Idade / Sexo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/inputIdade"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/age_hint"
                    android:inputType="number"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#9CA3AF"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="maven_pro"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinnerSexo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:fontFamily="maven_pro"
                    android:popupBackground="#111827"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Linha Peso / Altura -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/inputPeso"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/weight_hint"
                    android:inputType="numberDecimal"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#9CA3AF"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="maven_pro"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/inputAltura"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/height_hint"
                    android:inputType="numberDecimal"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#9CA3AF"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="maven_pro"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Botão Criar Conta -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/btn_signup"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:fontFamily="maven_pro"
                android:background="@drawable/btn_orange"
                app:backgroundTint="@null"
                android:layout_marginBottom="16dp" />

            <!-- Texto inferior -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_txt"
                    android:textColor="#D1D5DB"
                    android:fontFamily="maven_pro"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="maven_pro"
                    android:text="@string/login_link"
                    android:textColor="#F97316"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>