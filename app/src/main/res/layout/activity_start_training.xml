<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

  <!-- CONTEÚDO PRINCIPAL + OVERLAY -->
  <FrameLayout
      android:id="@+id/contentContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000"
        android:padding="35dp"
        android:clipToPadding="false"
        android:fillViewport="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

          <View
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/profile_circle" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvHeaderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilizador"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="maven_pro" />

            <TextView
                android:id="@+id/tvHeaderEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@exemplo.com"
                android:textColor="#D1D5DB"
                android:textSize="14sp"
                android:fontFamily="maven_pro" />
          </LinearLayout>

          <ImageView
              android:id="@+id/btnMenu"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_menu" />
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Treino"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="maven_pro"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha a sua atividade"
            android:textColor="#9CA3AF"
            android:textSize="14sp"
            android:fontFamily="maven_pro"
            android:layout_marginBottom="24dp" />

        <!-- Opções de treino -->
        <LinearLayout
            android:id="@+id/optionCorrida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/box_unselected"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/ic_walk" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtCorrida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corrida"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="maven_pro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toque para selecionar"
                android:textColor="#D1D5DB"
                android:textSize="14sp"
                android:fontFamily="maven_pro" />
          </LinearLayout>

          <View
              android:id="@+id/radioCorrida"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:visibility="gone"
              android:background="@drawable/radio_selected" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionCiclismo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/box_unselected"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/ic_bike" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtCiclismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciclismo"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="maven_pro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toque para selecionar"
                android:textColor="#D1D5DB"
                android:textSize="14sp"
                android:fontFamily="maven_pro" />
          </LinearLayout>

          <View
              android:id="@+id/radioCiclismo"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:visibility="gone"
              android:background="@drawable/radio_selected" />
        </LinearLayout>

        <!-- Botão principal -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Começar Agora"
            android:textAllCaps="false"
            android:textColor="#FFFF"
            android:fontFamily="maven_pro"
            android:background="@drawable/btn_orange"
            app:backgroundTint="@null"
            android:drawablePadding="8dp" />
      </LinearLayout>
    </ScrollView>

    <!-- Overlay para escurecer quando o menu estiver aberto -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
  </FrameLayout>

  <!-- MENU LATERAL -->
  <LinearLayout
      android:id="@+id/navContainer"
      android:layout_width="280dp"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:orientation="vertical"
      android:background="#0F1622"
      android:padding="16dp">

    <!-- Cabeçalho -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/btn_orange"
        android:padding="16dp">

      <View
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:background="@drawable/profile_circle"
          android:layout_marginBottom="8dp" />

      <TextView
          android:id="@+id/tvDrawerName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Utilizador"
          android:textColor="#FFFF"
          android:textStyle="bold"
          android:textSize="16sp"
          android:fontFamily="maven_pro" />

      <TextView
          android:id="@+id/tvDrawerEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="email@exemplo.com"
          android:textColor="#F3F4F6"
          android:textSize="13sp"
          android:fontFamily="maven_pro" />
    </LinearLayout>

    <!-- Itens de Navegação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp">

      <!-- Dashboard -->
      <LinearLayout
          android:id="@+id/navDashboard"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@drawable/nav_item_default"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:paddingHorizontal="16dp"
          android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_dashboard"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/navDashboardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:fontFamily="maven_pro" />
      </LinearLayout>

      <!-- Treinos -->
      <LinearLayout
          android:id="@+id/navTreinos"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@drawable/nav_item_default"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:paddingHorizontal="16dp"
          android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_workouts"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/navTreinosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treinos"
            android:textColor="#FFFF"
            android:fontFamily="maven_pro" />
      </LinearLayout>

      <!-- Perfil -->
      <LinearLayout
          android:id="@+id/navPerfil"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@drawable/nav_item_default"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:paddingHorizontal="16dp"
          android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_user"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/navPerfilLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textColor="#FFFF"
            android:fontFamily="maven_pro" />
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#1E293B"
          android:layout_marginBottom="12dp" />

      <!-- Terminar Sessão -->
      <LinearLayout
          android:id="@+id/navLogout"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@drawable/nav_item_default"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/navLogoutLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar Sessão"
            android:textColor="#EF4444"
            android:fontFamily="maven_pro" />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>