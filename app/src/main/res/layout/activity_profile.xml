<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTEÚDO PRINCIPAL -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Mantém o teu ScrollView -->
        <ScrollView
            android:id="@+id/scrollRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:fillViewport="true"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Top bar com botão de menu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/btnMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_menu" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfil"
                        android:textColor="#FFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="maven_pro" />
                </LinearLayout>

                <!-- Cabeçalho (removi a altura fixa para evitar cortes/overlap) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="24dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="16dp">

                    <!-- Foto de perfil -->
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_circle" />
                    </FrameLayout>

                    <!-- Nome (dinâmico) -->
                    <TextView
                        android:id="@+id/tvHeaderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="João Silva"
                        android:textColor="#FFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="maven_pro" />

                    <!-- Email (dinâmico) -->
                    <TextView
                        android:id="@+id/tvHeaderEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joao.silva@email.com"
                        android:textColor="#F3F4F6"
                        android:textSize="14sp"
                        android:fontFamily="maven_pro" />
                </LinearLayout>

                <!-- Secção: Dados Pessoais -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    android:clipToOutline="true"
                    android:background="@drawable/login_box">

                    <!-- Título -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dados Pessoais"
                            android:textColor="#FFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="maven_pro" />
                    </LinearLayout>

                    <!-- Nome -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nome"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:fontFamily="maven_pro" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="João Silva"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:fontFamily="maven_pro" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:fontFamily="maven_pro" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joao.silva@email.com"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:fontFamily="maven_pro" />
                    </LinearLayout>

                    <!-- Sexo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sexo"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:fontFamily="maven_pro" />

                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masculino"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:fontFamily="maven_pro" />
                    </LinearLayout>

                    <!-- Idade -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Idade"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28 anos"
                            android:textColor="#FFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Peso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Peso"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75 kg"
                            android:textColor="#FFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Altura -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Altura"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="178 cm"
                            android:textColor="#FFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Botões -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/btn_orange"
                    android:fontFamily="maven_pro"
                    android:text="Alterar Password"
                    android:textAllCaps="false"
                    android:textColor="#FFFF" />
            </LinearLayout>
        </ScrollView>

        <!-- Overlay para escurecer ao abrir o nav -->
        <View
            android:id="@+id/dimOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <!-- NAV LATERAL -->
    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#0F1622"
        android:padding="16dp">

        <!-- Cabeçalho do Drawer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_orange"
            android:padding="16dp">

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/profile_circle"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDrawerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João Silva"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="maven_pro" />

            <TextView
                android:id="@+id/tvDrawerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joao.silva@email.com"
                android:textColor="#F3F4F6"
                android:textSize="13sp"
                android:fontFamily="maven_pro" />
        </LinearLayout>

        <!-- Itens -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <LinearLayout
                android:id="@+id/navDashboard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dashboard"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navDashboardLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="#FFFF"
                    android:textStyle="bold"
                    android:fontFamily="maven_pro" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navTreinos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_workouts"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navTreinosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treinos"
                    android:textColor="#FFFF"
                    android:fontFamily="maven_pro" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navPerfil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navPerfilLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textColor="#FFFF"
                    android:fontFamily="maven_pro" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1E293B"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/navLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_logout"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navLogoutLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminar Sessão"
                    android:textColor="#EF4444"
                    android:fontFamily="maven_pro" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>