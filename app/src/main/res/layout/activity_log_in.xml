<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Card principal -->
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/login_box"
            android:gravity="center"
            android:elevation="4dp">

            <!-- Ícone -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:src="@mipmap/ic_launcher_foreground"
                android:background="@drawable/icon_bg"
                android:contentDescription="@string/app_name" />

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:textColor="@color/muted_foreground"
                android:textStyle="bold"
                android:fontFamily="maven_pro"
                android:textSize="22sp"
                android:layout_marginBottom="4dp" />

            <!-- Subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_subtitle"
                android:textColor="@color/muted_foreground"
                android:fontFamily="maven_pro"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/email_hint"
                android:background="@color/background"
                android:textColor="@color/muted_foreground"
                android:textColorHint="@color/secondary_muted_foreground"
                android:paddingHorizontal="12dp"
                android:fontFamily="maven_pro"
                android:layout_marginBottom="12dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:background="@color/background"
                android:textColor="@color/muted_foreground"
                android:textColorHint="@color/secondary_muted_foreground"
                android:paddingHorizontal="12dp"
                android:fontFamily="maven_pro"
                android:layout_marginBottom="16dp" />

            <!-- Botão Entrar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/btn_login"
                android:textAllCaps="false"
                android:textColor="@color/muted_foreground"
                android:fontFamily="maven_pro"
                android:background="@drawable/btn_orange"
                app:backgroundTint="@null"
                android:layout_marginBottom="12dp" />

            <!-- Checkbox Remember me (centralizado) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/rememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primary_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_check"
                    android:textColor="@color/primary_foreground"
                    android:fontFamily="maven_pro"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- Linha: Don't have an account? Sign up -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_account"
                    android:textColor="@color/secondary_muted_foreground"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="maven_pro"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="maven_pro"
                    android:text="@string/signup_link"
                    android:textColor="@color/primary_foreground"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>