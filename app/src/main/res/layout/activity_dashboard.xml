<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- CONTEÚDO PRINCIPAL + OVERLAY -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Conteúdo da Dashboard -->
        <ScrollView
            android:id="@+id/scrollRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="33dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/profile_circle" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvHeaderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Utilizador"
                            android:textColor="#FFFF"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvHeaderEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email@exemplo.com"
                            android:textColor="#D1D5DB"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_menu" />
                </LinearLayout>

                <!-- Último Treino -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/login_box"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último Treino"
                        android:textColor="#FFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvUltTreinoTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textColor="#F97316"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tvUltTreinoQuando"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textColor="#9CA3AF"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- Distância -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#111827"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distância"
                                android:textColor="#9CA3AF"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvUltTreinoDist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textColor="#FFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <!-- Tempo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#111827"
                            android:padding="12dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tempo"
                                android:textColor="#9CA3AF"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvUltTreinoTempo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textColor="#FFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Calorias -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#111827"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calorias"
                                android:textColor="#9CA3AF"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvUltTreinoKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textColor="#FFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <!-- Velocidade Média -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#111827"
                            android:padding="12dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vel. Média"
                                android:textColor="#9CA3AF"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvUltTreinoVel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textColor="#FFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Estatísticas rápidas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#111827"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_margin="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Objetivo"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textColor="#F97316"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#111827"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_margin="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sequência"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 dias"
                            android:textColor="#FFFF"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Botão principal -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnIniciarTreino"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Iniciar Novo Treino"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:background="@drawable/btn_orange"
                    app:backgroundTint="@null"
                    android:drawablePadding="8dp" />

            </LinearLayout>
        </ScrollView>

        <!-- Overlay para escurecer quando o menu estiver aberto -->
        <View
            android:id="@+id/dimOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <!-- MENU LATERAL -->
    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#0F1622"
        android:padding="16dp">

        <!-- Cabeçalho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_orange"
            android:padding="16dp">

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/profile_circle"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDrawerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilizador"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDrawerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@exemplo.com"
                android:textColor="#F3F4F6"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Itens de Navegação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <!-- Dashboard -->
            <LinearLayout
                android:id="@+id/navDashboard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dashboard"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navDashboardLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="#FFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Treinos -->
            <LinearLayout
                android:id="@+id/navTreinos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_workouts"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navTreinosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treinos"
                    android:textColor="#FFFF" />
            </LinearLayout>

            <!-- Perfil -->
            <LinearLayout
                android:id="@+id/navPerfil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navPerfilLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textColor="#FFFF" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1E293B"
                android:layout_marginBottom="12dp" />

            <!-- Terminar Sessão -->
            <LinearLayout
                android:id="@+id/navLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/nav_item_default"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_logout"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/navLogoutLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminar Sessão"
                    android:textColor="#EF4444" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>